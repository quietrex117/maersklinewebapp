@model DDAC.Models.Vessel
@{
	Layout = null;
}
<h2>View Vessels</h2>
<br />
@using (Html.BeginForm("delete","user", FormMethod.Post,new { id="popupForm"}))
{
	@Html.HiddenFor(a=>a.VesselsId)
	<div class="form-group">
		<label>Vessel Name</label>
		<p>@Model.VesselName</p>
	</div>

	<div class="form-group">
		<label>Terminal</label>
		<p>@Model.Terminal</p>
	</div>

	<div class="form-group">
		<label>Country</label>
		<p>@Model.Country</p>
	</div>
	
}
