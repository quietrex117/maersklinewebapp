@model DDAC.Models.Vessel
@{
	Layout = null;
}
<h2>Save</h2>
@using (Html.BeginForm("save","user",FormMethod.Post, new { id= "popupForm" }))
{
	if(Model!=null && Model.VesselsId > 0)
	{
		@Html.HiddenFor(a=>a.VesselsId)
	}

	<div class="form-group">
		<label>Vessel Name</label>
		@Html.TextBoxFor(a=>a.VesselName, new { @class="form-control"})
		@Html.ValidationMessageFor(a=>a.VesselName)
	</div>
	<div class="form-group">
		<label>Terminal</label>
		@Html.TextBoxFor(a => a.Terminal, new { @class = "form-control" })
		@Html.ValidationMessageFor(a => a.Terminal)
	</div>
	<div class="form-group">
		<label>Country</label>
		@Html.TextBoxFor(a => a.Country, new { @class = "form-control" })
		@Html.ValidationMessageFor(a => a.Country)
	</div>

	<div>
		<input class="popup btn btn-primary" type="submit" value="Save" />
	</div>

}

